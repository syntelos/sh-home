#!/bin/bash
prog=$(basename $0)
source=~/${prog}

function usage(){
    cat<<EOF>&2
Synopsis

    ${prog} [keys|values|enumerate|count|create]

Description

    List keys, values, or files found in the membership of

       ${source}/*.txt.

See also

    file_datetime
    datetime_file

EOF
    return 0
}
#
# Index ${source}/*.txt
#
declare -A list

for src in $(2>/dev/null ls ${source}/*.txt)
do
    src_base=$(basename ${src} .txt)
    src_code=$(echo ${src_base} | sed 's/.*-//')
    if [ -n "${src_base}" ]&&[ -n "${src_code}" ]&&[ "${src_base}" != "${src_code}" ]
    then
	list[${src_code}]="${src}"
    fi
done

function keys {
    for key in ${!list[@]}
    do
	echo "${key}"
    done
    return 0
}

function values {
    for key in $(keys | sort )
    do
	val=${list[${key}]}
	echo "${val}"
    done
    return 0
}

function enumerate {
    for file in $(values)
    do
	echo "# ${file}"
	cat -n "${file}"
    done
    return 0
}

function count {
    for file in $(values)
    do
	echo "# ${file}"
	wc "${file}" | sed 's%^ *%%'
    done
    return 0
}

function create {
    title="$*"
    base=$(echo $* | sed 's/ /_/g;')
    tgt=${source}/${base}.txt
    echo "${title}" > "${tgt}"
    if 2>/dev/null emacs -nw "${tgt}" && file_datetime "${tgt}"
    then
	rm -f "${tgt}~"
	return 0
    else
	return 1
    fi
}

case "${1}" in
    values)
	values ;;
    keys)
	keys ;;
    list|enum|enumerate)
	enumerate ;;
    count|wc)
	count ;;
    write|edit|create)
	shift
	create $* ;;
    *)
	usage ;;
esac
